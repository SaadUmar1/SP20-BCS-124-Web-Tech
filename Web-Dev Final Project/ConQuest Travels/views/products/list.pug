    .row    
        div.products
            .row.justify-content-center    
                
                
                each product in products 
                    <div class="card col-lg-4 col-sm-12 m-5" style="width: 18rem;">
                        img(src=product.img, alt="Card image cap")
                        <div class="card-body">
                            h5= product.name
                            hr
                            h6.mt-2="Rs "+product.price
                            hr
                            p.mt-2= product.description 
                            div.buttons
                                        
                                a(href="products/cart/"+product._id)
                                    <span class="material-symbols-outlined">shopping_cart</span>
                                   
                                a(href="products/edit/"+product._id ) 
                                    <span class="material-symbols-outlined">edit</span>
                                a(href="products/delete/"+product._id )
                                    <span class="material-symbols-outlined">delete</span>          
                        </div> 
                    </div>