extends ../layout

block content 
    h1 Edit Product
    form(action="/products/edit/"+product._id , method="post")
        .form-group
            label(for="name") Product Name 
            input#name(type="text",class="form-control mt-2", name="name", value=product.name) 
        .form-group
            label(for="description") Product Description
            //- , placeholder=product.description
            textarea#description(type="text",class="form-control mt-2", rows='3', name="description", value=product.description) 
        .form-group
            label(for="price") Product Price
            input#price(type="text",class="form-control mt-2", name="price", value=product.price)
        .form-group
            label(for="region") Select Region
            select#region(class="form-select mt-2", aria-label='Default select example', name="region", product=product.region)
                option(selected='') Select Province
                option(value='Punjab') Punjab
                option(value='KPK') KPK
                option(value='Sindh') Sindh
                option(value='Balochistan') Balochistan
                option(value='Gilgit Baltistan') Gilgit Baltistan
                option(value='Azad Kashmir') Azad Kashmir
                option(value='Hazara Region') Hazara Region
        button(type="submit", class="btn btn-info mt-2") Update 